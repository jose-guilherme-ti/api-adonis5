{
  "extends": "adonis-preset-ts/tsconfig.json",
  "compilerOptions": {
    "outDir": "build",
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "App/*": ["./app/*"],
      "Config/*": ["./config/*"],
      "Contracts/*": ["./contracts/*"],
      "Database/*": ["./database/*"]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@adonisjs/lucid",
      "@adonisjs/auth",
      "@japa/preset-adonis/build/adonis-typings"
    ]
  },
  "include": [
    "app/**/*.ts",
    "start/**/*.ts",
    "config/**/*.ts",
    "contracts/**/*.ts",
    "database/**/*.ts",
    "env.ts",
    "tests/**/*.ts",
    "commands/**/*.ts"
  ],
  "exclude": ["node_modules", "build"]
}
